{
  "manifest_version": 3,
  "name": "volumr",
  "version": "1.1",
  "description": "Adds a volume adjuster to audio posts on tumblr.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs",
    "*://*.tumblr.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.tumblr.com/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "volumrStyles.css"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon3.png",
      "32": "icon3.png",
      "48": "icon3.png",
      "128": "icon3.png"
    }
  }
}